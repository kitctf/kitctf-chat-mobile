+            return (
+                <Emoji
+                    emojiName={emojiName}
+                    literal={literal}
+                    testID='markdown_emoji'
+                    textStyle={computeTextStyle(textStyles, baseTextStyle, context)}
+                />
+            );
+        }
         return (
-            <Emoji
